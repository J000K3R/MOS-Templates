{
  "name": "bookstack",
  "repo": "lscr.io/linuxserver/bookstack:latest",
  "network": "bridge",
  "custom_ip": null,
  "default_shell": "sh",
  "privileged": false,
  "extra_parameters": "--restart=unless-stopped",
  "post_parameters": null,
  "web_ui_url": "http://[IP]:[PORT:6875]",
  "icon": "https://raw.githubusercontent.com/J000K3R/MOS-Templates/main/icons/bookstack.png",
  "category": [ "productivity" ],
  "project": "https://github.com/BookStackApp/BookStack",
  "support": "https://github.com/BookStackApp/BookStack/issues",
  "description": "A platform for storing and organising information and documentation. BookStack is an opinionated documentation platform that provides a pleasant and simple out-of-the-box experience. New users to an instance should find the experience intuitive and only basic word-processing skills should be required to get involved in creating content on BookStack. The platform should provide advanced power features to those that desire it, but they should not interfere with the core simple user experience.",
  "donate": "https://github.com/sponsors/ssddanbrown",
  "paths": [
    {
      "name": "Appdata",
      "mode": "rw",
      "host": "/mnt/cache/appdata/bookstack",
      "container": "/config"
    }
  ],
  "ports": [
    {
      "name": "WebUI Port",
      "protocol": "tcp",
      "host": "6875",
      "container": "80"
    }
  ],
  "variables": [
    {
      "name": "Timezone",
      "key": "TZ",
      "value": "Europe/Berlin",
      "mask": false
    },
    {
      "name": "URL for WebUI",
      "key": "APP_URL",
      "value": "http://192.168.1.1:6875",
      "mask": false
    },
    {
      "name": "Session encryption key",
      "key": "APP_KEY",
      "value": "You have to Run this: docker run -it --rm --entrypoint /bin/bash lscr.io/linuxserver/bookstack:latest appkey",
      "mask": false
    },
    {
      "name": "DB Host",
      "key": "DB_HOST",
      "value": "mariadb",
      "mask": false
    },
    {
      "name": "DB Port",
      "key": "DB_PORT",
      "value": "3306",
      "mask": false
    },
    {
      "name": "DB Username",
      "key": "DB_USERNAME",
      "value": "bookstack",
      "mask": false
    },
    {
      "name": "DB Password",
      "key": "DB_PASSWORD",
      "value": "bookstack",
      "mask": false
    },
    {
      "name": "DB Database",
      "key": "DB_DATABASE",
      "value": "bookstack",
      "mask": false
    },
    {
      "name": "Async Action Handling",
      "key": "QUEUE_CONNECTION",
      "value": "database",
      "mask": false
    }
  ],
  "devices": [],
  "gpus": []
}
